{
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md",
      "addUnreleased": true,
      "keepUnreleased": false,
      "addVersionUrl": true
    }
  },
  "git": {
    "commitMessage": "release: bump v${version}",
    "tagName": "v${version}",
    "requireBranch": "main",
    "requireUpstream": false,
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "skipChecks": true,
    "publish": true,
    "publishArgs": ["--provenance", "--access", "public"]
  }
}
