{
  "hooks": {
    "before:bump": [
      "pnpm tsx scripts/populate-unreleased.ts",
      "pnpm tsx scripts/update-changelog.ts ${version}"
    ]
  },
  "github": {
    "release": true,
    "releaseNotes": "pnpm tsx scripts/extract-changelog.ts ${version}"
  },
  "git": {
    "changelog": "git log --pretty=format:'- %s' ${latestTag}..HEAD",
    "commitMessage": "release: bump v${version}",
    "tagName": "v${version}",
    "requireBranch": "main",
    "requireUpstream": false,
    "requireCleanWorkingDir": false
  },
  "npm": {
    "skipChecks": true,
    "publish": true,
    "publishArgs": ["--provenance", "--access", "public"]
  }
}
