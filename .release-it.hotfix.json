{
  "increment": "patch",
  "git": {
    "changelog": "git log --pretty=format:'- %s' ${latestTag}..HEAD",
    "commitMessage": "hotfix: bump v${version}",
    "tagName": "v${version}",
    "requireBranch": "main",
    "requireUpstream": false,
    "requireCleanWorkingDir": false
  },
  "hooks": {
    "before:bump": [
      "echo 'ðŸš¨ Creating hotfix release v${version}'",
      "pnpm tsx scripts/populate-unreleased-changelog.ts"
    ]
  },
  "github": {
    "release": true,
    "releaseNotes": "pnpm tsx scripts/extract-changelog.ts ${version}"
  },
  "npm": {
    "skipChecks": true,
    "publish": true,
    "publishArgs": ["--provenance", "--access", "public"]
  }
}
