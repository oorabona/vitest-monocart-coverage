{
  "increment": false,
  "git": false,
  "npm": {
    "publish": true,
    "skipChecks": true,
    "publishArgs": ["--provenance", "--access", "public"]
  },
  "github": {
    "release": true,
    "update": true,
    "releaseNotes": "pnpm tsx scripts/extract-changelog.ts ${version}"
  },
  "hooks": {
    "before:init": [
      "echo 'ℹ️  Checking out tag ${latestTag} to ensure code consistency'",
      "git checkout ${latestTag}"
    ],
    "after:release": [
      "echo 'ℹ️  Returning to previous branch'",
      "git checkout -",
      "echo '✅ Successfully republished ${name} v${version} to npm and GitHub (retry mode)'"
    ]
  }
}
