{
  "name": "@oorabona/vitest-monocart-coverage",
  "version": "1.0.0",
  "description": "A Vitest custom coverage provider that integrates with Monocart coverage reporting",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:self": "pnpm build && vitest run --coverage --config vitest.self-coverage.config.ts",
    "test:ui": "vitest --ui",
    "check:fix": "biome check --write .",
    "check": "biome check .",
    "clean": "rimraf dist",
    "prepare": "simple-git-hooks",
    "release": "pnpm release-it",
    "retry-publish": "pnpm tsx scripts/retry-publish.ts && pnpm release-it --config .release-it.retry-publish.json",
    "hotfix": "pnpm release-it --config .release-it.hotfix.json",
    "republish": "pnpm release-it --config .release-it.republish.json",
    "typecheck:tests": "tsc --noEmit -p tsconfig.tests.json",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "vitest",
    "coverage",
    "monocart",
    "typescript",
    "testing"
  ],
  "author": "Olivier Orabona <olivier.orabona@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "monocart-coverage-reports": "^2.12.6",
    "picomatch": "^4.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/node": "^24.3.1",
    "@types/picomatch": "^4.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "istanbul-lib-coverage": "^3.2.2",
    "magicast": "^0.3.5",
    "nano-staged": "^0.8.0",
    "release-it": "^19.0.4",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec nano-staged"
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67",
  "engines": {
    "node": ">=20"
  }
}
