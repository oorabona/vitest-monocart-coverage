{
  "name": "@oorabona/vitest-monocart-coverage",
  "version": "2.0.1",
  "description": "A Vitest custom coverage provider that integrates with Monocart coverage reporting",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oorabona/vitest-monocart-coverage.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/browser.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js",
      "default": "./dist/browser.js"
    },
    "./browser-runtime": {
      "types": "./dist/browser-runtime.d.ts",
      "import": "./dist/browser-runtime.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.cjs",
    "dist/**/*.d.ts",
    "dist/**/*.d.cts"
  ],
  "scripts": {
    "build": "tsup",
    "build:dev": "NODE_ENV=development tsup",
    "dev": "NODE_ENV=development tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:self": "pnpm build:dev && vitest run --coverage --config vitest.self-coverage.config.ts",
    "test:coverage:self:prod": "pnpm build && vitest run --coverage --config vitest.self-coverage.config.ts",
    "test:browser:coverage": "vitest run --coverage --config vitest.browser.config.ts",
    "test:browser:coverage:self": "pnpm build:dev && vitest run --coverage --config vitest.self-coverage.browser.config.ts",
    "test:browser:coverage:self:prod": "pnpm build && vitest run --coverage --config vitest.self-coverage.browser.config.ts",
    "test:integration": "playwright test",
    "test:integration:ui": "playwright test --ui",
    "test:integration:debug": "playwright test --debug",
    "test:all": "pnpm test && pnpm test:integration",
    "test:all:coverage": "pnpm test:coverage:self && pnpm test:integration",
    "test:ui": "vitest --ui",
    "check:fix": "biome check --write .",
    "check": "biome check .",
    "clean": "rimraf dist",
    "clean:all": "rimraf dist coverage browser-coverage self-coverage self-browser-coverage",
    "prepare": "simple-git-hooks",
    "release": "pnpm release-it --config .release-it.no-changelog.json",
    "release:auto": "pnpm release-it",
    "retry-publish": "pnpm tsx scripts/retry-publish.ts && pnpm release-it --config .release-it.retry-publish.json",
    "hotfix": "pnpm release-it --config .release-it.hotfix.json",
    "republish": "pnpm release-it --config .release-it.republish.json",
    "changelog:prepare": "pnpm release-it --config .release-it.changelog-only.json --ci",
    "typecheck:tests": "tsc --noEmit -p tsconfig.tests.json",
    "typecheck:browser": "tsc --noEmit -p tsconfig.browser.json",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "vitest",
    "coverage",
    "monocart",
    "typescript",
    "testing"
  ],
  "author": "Olivier Orabona <olivier.orabona@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "@vitest/browser": ">=2.0.0",
    "vitest": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "@vitest/browser": {
      "optional": true
    }
  },
  "dependencies": {
    "monocart-coverage-reports": "^2.12.6",
    "picomatch": "^4.0.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@playwright/test": "^1.55.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@release-it/keep-a-changelog": "^7.0.0",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/node": "^24.3.1",
    "@types/picomatch": "^4.0.2",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "istanbul-lib-coverage": "^3.2.2",
    "magicast": "^0.3.5",
    "nano-staged": "^0.8.0",
    "playwright": "^1.55.0",
    "release-it": "^19.0.4",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec nano-staged"
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67",
  "engines": {
    "node": ">=20"
  }
}
